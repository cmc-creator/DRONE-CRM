// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  company   String?
  address   String?
  city      String?
  state     String?
  notes     String?
  status    String   @default("active") // active, inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs      Job[]
}

model Pilot {
  id              String   @id @default(cuid())
  name            String
  email           String?
  phone           String?
  city            String?
  state           String?
  certifications  String?  // e.g. "Part 107, Night Waiver"
  specialties     String?  // e.g. "Real Estate, Construction, Weddings"
  hourlyRate      Float?
  status          String   @default("active") // active, inactive, busy
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  jobs            Job[]
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  company   String?
  source    String?  // e.g. "Website", "Referral", "Social Media"
  status    String   @default("new") // new, contacted, qualified, proposal, won, lost
  value     Float?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id               String    @id @default(cuid())
  title            String
  description      String?
  clientId         String
  client           Client    @relation(fields: [clientId], references: [id])
  pilotId          String?
  pilot            Pilot?    @relation(fields: [pilotId], references: [id])
  status           String    @default("pending") // pending, assigned, in_progress, completed, cancelled
  jobDate          DateTime?
  location         String?
  totalAmount      Float?
  commissionRate   Float     @default(15) // percentage
  commissionAmount Float?
  notes            String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  contract         Contract?
}

model Contract {
  id          String    @id @default(cuid())
  jobId       String    @unique
  job         Job       @relation(fields: [jobId], references: [id])
  title       String
  status      String    @default("draft") // draft, sent, signed, expired
  signedDate  DateTime?
  expiresAt   DateTime?
  content     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
